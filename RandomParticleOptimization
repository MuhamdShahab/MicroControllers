char input;
 
void setup() {
pinMode(13,OUTPUT);   //left motors forward
pinMode(12,OUTPUT);   //left motors reverse
pinMode(11,OUTPUT);   //right motors forward
pinMode(10,OUTPUT);   //right motors reverse
Serial.begin(9600);
 
}
 
void loop() {
if(Serial.available()){
  input = Serial.read();
  Serial.println(input);
}
 
if(input == 'F'){            //move forward(all motors rotate in forward direction)
  digitalWrite(13,HIGH);
  digitalWrite(11,HIGH);
}
 
else if(input == 'B'){      //move reverse (all motors rotate in reverse direction)
  digitalWrite(12,HIGH);
  digitalWrite(10,HIGH);
}
 
else if(input == 'L'){      //turn right (left side motors rotate in forward direction, right side motors rotates reverse)
  digitalWrite(11,HIGH);
  digitalWrite(12,HIGH);
}
 
else if(input == 'R'){      //turn left (right side motors rotate in forward direction, left side motors rotates reverse)
  digitalWrite(13,HIGH);
  pinMode(10,OUTPUT); 
}
 
else if(input == 'S'){      //STOP (all motors stop)
  digitalWrite(13,LOW);
  digitalWrite(12,LOW);
  digitalWrite(11,LOW);
  digitalWrite(10,LOW);
}
delay(100);
}
